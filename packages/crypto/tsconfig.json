{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@node-core/caritat/*": ["../core/src/*"],
      "@node-core/caritat-crypto/*": ["../crypto/src/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
